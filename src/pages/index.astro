---
import { Image } from 'astro:assets'

import BaseLayout from '$layouts/Base.astro'

import logoP from '$images/logo-ipsitec-azul-claro.png'
import logoC from '$images/logo-conselleria-rgb_rojo_cast.png'
---

<BaseLayout
  auth={false}
  admin={false}
  title="Home"
  description="Home page">
  <section class="px-0 px-md-4 my-4 py-4 mx-auto text-center">
    <h1>Welcome to Ipsitec</h1>

    <div class="col col-md-6 mx-auto">
      <Image
        class="img-fluid ratio ratio-1x1"
        src={logoP}
        format={'webp'}
        widths={[240, 540, 720, logoP.width]}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${logoP.width}px`}
        alt="Project Logo"/>
    </div>

    <div class="mt-4">
      <h2 class="mb-2 h4 text-primary">
        Promovemos el bienestar y la calidad de vida mediante el uso de tecnolog√≠as.
      </h2>
    </div>
  </section>
</BaseLayout>
